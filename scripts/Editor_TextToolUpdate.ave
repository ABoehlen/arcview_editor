theView = av.GetActiveDoc
if (Extension.GetExtensions.Get("Label & Text Tools") = NIL) then
  SELF.SetEnabled(FALSE)
  return nil
end  
theTheme = theView.GetEditableTheme
if (theTheme = nil) then
  SELF.SetEnabled(TRUE) 
else
  SELF.SetEnabled(FALSE)
end
 

